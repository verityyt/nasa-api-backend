{
  "compilerOptions": {
    "strictNullChecks": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo.json",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "build/"
  },
  "include": [
    "src/**/*"
  ]
}